{
  "name": "listing",
  "icon": "seagull.png",
  "displayName": "Listing",
  "description": "Extract listing from VSCode in HTML and LaTex format.",
  "version": "0.0.0",
  "publisher": "lachrist",
  "repository": "https://github.com/lachrist/vscode-listing",
  "engines": {
    "vscode": "^1.93.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/index.js",
  "contributes": {
    "commands": [
      {
        "command": "listing.copyAsLatex",
        "title": "Copy as Latex Listing",
        "category": "Listing",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "listing.copyAsHtml",
        "title": "Copy as HTML Listing",
        "category": "Listing",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Listing Extension Settings",
      "properties": {
        "listing.switch-theme": {
          "description": "Generate listings in another theme.",
          "type": "boolean",
          "default": true
        },
        "listing.theme": {
          "description": "The theme of the listing when `listing.switch-theme` is enabled.",
          "type": "string",
          "default": "Quiet Light"
        },
        "listing.source-directory": {
          "description": "The source directory for listings.",
          "type": "string",
          "default": "listing/src/"
        },
        "listing.ignore-pattern-list": {
          "description": "A list of glob patterns to ignore from the source directory.",
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "listing.save-html": {
          "description": "Generate HTML listing on save.",
          "type": "boolean",
          "default": true
        },
        "listing.html-output-directory": {
          "description": "The directory where HTML listings should be saved when `listing.save-html` is enabled.",
          "type": "string",
          "default": "listing/html/"
        },
        "listing.save-latex": {
          "description": "Generate LaTex listing on save.",
          "type": "boolean",
          "default": true
        },
        "listing.latex-output-directory": {
          "description": "The directory where LaTex listings should be saved when `listing.save-latex` is enabled.",
          "type": "string",
          "default": "listing/latex/"
        }
      }
    }
  },
  "scripts": {
    "check-type": "npx tsc",
    "check-format": "npx prettier --check .",
    "check": "npm run check-type && npm run check-format",
    "pack-bundle": "npx esbuild src/index.js --bundle --outfile=out/index.js --platform=node --format=cjs",
    "pack-vsix": "npx vsce package",
    "pack": "npm run pack-bundle && npm run pack-vsix"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@types/vscode": "^1.73.0",
    "@vscode/vsce": "^3.1.0",
    "esbuild": "^0.23.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "html-to-latex-listing": "^0.3.2",
    "minimatch": "^10.0.1"
  }
}
